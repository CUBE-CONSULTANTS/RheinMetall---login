<mvc:View controllerName="login.login.controller.login"
xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
xmlns="sap.m">
<Page id="RheinLogin" enableScrolling="false"  title="Login"
    showFooter="true"
    showHeader="true">
    <HBox 
        justifyContent="Center"
        alignItems="Center">
        <VBox width="50%"
            height="100%"
            justifyContent="Center"
            alignItems="Center">
            <!-- <VBox width="75%"
                class="sapUiSmallMarginTop"
                alignItems="Center">
                <Image src="{value: 'Rheinmetall/gestionespesetrasfertarheinmetal/img/rhein3.png', formatter: 'sap.ui.require.toUrl'}"
                    height="90px"
                    width="400px" />
            </VBox> -->
            <!-- Form section -->
            <VBox width="75%"
                class="sapUiSmallMarginTop"
                alignItems="Center">
                <VBox width="100%">
                    <Label text="Username:"
                        class="labelUsername" />
                    <Input id="username" 
                        width="100%"
                        value="{modelloUname>/Uname}"
                        class="sapUiTinyMarginTop" />
                </VBox>
                <VBox width="100%">
                    <Label class="sapUiTinyMarginTop"
                        text="Password:"
                        textAlign="Begin" />
                        <HBox>
                        <Input id="password" 
                            type="Password"
                            value="{modelloUname>/Password}"
                            width="100%" />
                        <Button id="ButtonHidePass" icon="{modelloIcon>/icona}" press="onShowPasswordPress"/>
                        </HBox>
                    
                </VBox>
            </VBox>
            <VBox width="75%"
                class="sapUiSmallMarginTop"
                alignItems="Center">
                    <VBox width="25%">
                        <Button text="Login"
                            press="login"
                            id="idLoginButton"
                            type="Emphasized"
                            class="sapUiSmallMarginTop logcenter" 
                        />
                    </VBox>
            </VBox>
        </VBox>
    </HBox>
    <HBox >
        <Text text=" "/>
    </HBox>
    <HBox justifyContent="Center">
        <!-- <Image src="{value: 'Rheinmetall/gestionespesetrasfertarheinmetal/img/rheinArmi.jpg', formatter: 'sap.ui.require.toUrl'}"
        height="300px"
        width="500px" /> -->
        <Image src="{value: 'login/login/public/images/rhein3.png', formatter: 'sap.ui.require.toUrl'}"
            height="90px"
            width="300px" />
    </HBox>
    <footer>
        <OverflowToolbar >
            <Text text="Â© 2024 Rheinmetall AG"/>
        </OverflowToolbar>
    </footer>
</Page>
</mvc:View>
